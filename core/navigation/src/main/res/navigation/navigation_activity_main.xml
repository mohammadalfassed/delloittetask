<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_navigation"
    app:startDestination="@id/navigation_fragment_news_list">

    <fragment
        android:id="@+id/navigation_fragment_login"
        android:name="com.mohammad.delloittetask.features.auth.presentation.login.LoginFragment"
        android:label="LoginFragment" />

    <fragment
        android:id="@+id/navigation_fragment_register"
        android:name="com.mohammad.delloittetask.features.auth.presentation.register.RegisterFragment"
        android:label="RegisterFragment" />

    <fragment
        android:id="@+id/navigation_fragment_news_list"
        android:name="com.mohammad.delloittetask.features.news.presentation.newslist.NewsListFragment"
        android:label="NewsListFragment" />

    <dialog
        android:id="@+id/navigation_bottom_sheet_filter"
        android:name="com.mohammad.delloittetask.features.news.presentation.newslist.FilterBottomSheetFragment"
        android:label="FilterBottomSheetFragment" />

    <fragment
        android:id="@+id/navigation_fragment_news_details"
        android:name="com.mohammad.delloittetask.features.news.presentation.newsdetails.NewsDetailsFragment"
        android:label="NewsDetailsFragment" />

    <fragment
        android:id="@+id/navigation_fragment_more"
        android:name="com.mohammad.delloittetask.features.more.presentation.MoreFragment"
        android:label="MoreFragment" />

</navigation>
