    <style name="AppTheme.TextInputLayoutOutlinedBoxDisable">
        <item name="boxBackgroundColor">@color/light_grey</item>
        <item name="colorOutline">@color/light_grey</item>
        <item name="textOutlineColor">@color/black</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxStrokeColor">@color/teal_700</item>
        <item name="hintTextColor">@color/teal_700</item>
        <item name="errorTextAppearance">@style/ErrorAppearance</item>
    </style>

    <style name="ErrorAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HelperAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="CounterAppearance">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ErrorTextViewAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
    </style>


    <style name="ShapeAppearanceOverlay.App.CornerSizeTop10" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
    </style>


    <style name="AppTheme.TextInputLayoutOutlinedBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="textOutlineColor">@color/black</item>
        <item name="boxStrokeColor">@color/teal_700</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="errorTextAppearance">@style/ErrorAppearance</item>
        <item name="errorTextColor">@color/red</item>
        <item name="helperTextTextAppearance">@style/HelperAppearance</item>
    </style>

    <style name="AppTheme.OtpTextInputLayoutOutlinedBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="textOutlineColor">@color/black</item>
        <item name="boxStrokeColor">@color/teal_700</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="errorTextAppearance">@style/ErrorAppearance</item>
        <item name="errorTextColor">@color/red</item>
        <item name="helperTextTextAppearance">@style/HelperAppearance</item>
    </style>

    <style name="AppTheme.NoActionBarAndStatusBar" parent="AppTheme">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

</resources>
